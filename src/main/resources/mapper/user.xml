<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xzh.clothes.UserModule.UserMapper">
    <select id="queryUser" resultType="UserDo">
        select * from user
        <where>
            1 = 1
            <if test="userName!=null and userName!=''">
                and  userName = #{userName}
            </if>
            <if test="userPhone!=null and userPhone!=''">
                and  userPhone = #{userPhone}
            </if>
        </where>

    </select>
    <insert id="addUser" keyProperty="userId" useGeneratedKeys="true" parameterType="UserDo">
        insert into user(userName,userSex,userPhone,userAddress,userPass,userContent,userMoney,userAuth,userTradePass) values(#{userName},#{userSex},#{userPhone},#{userAddress},#{userPass},#{userContent},#{userMoney},#{userAuth},#{userTradePass})
    </insert>
</mapper>